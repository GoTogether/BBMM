<div class="container">

  <div class="login-illustrations">
    <div class="login-content">
       <div>
          <a href=<%=root_path%>>
            <img src='/assets/icons/Gift-Box@2x.png' />
          </a>
       </div>
    </div>
  </div>

  <hr style="width: 100%; height: 1px;background-color: #8E44AD;" />

  <div class="login">
    <div class="login-screen">
      <div class="login-form">
        <div class="control-group">
          <input id="login-name" class="login-field" type="text" value="" placeholder="用户名"/>
          <label class="login-field-icon fui-user" for="login-name"></label>
        </div>
        <div class="control-group">
          <input id="login-pass" class="login-field" type="password" value="" placeholder="密码"/>
          <label class="login-field-icon fui-lock" for="login-pass"></label>
        </div>

        <div class="control-group">
          <input id="login-pass" class="login-field" type="password" value="" placeholder="重复密码"/>
          <label class="login-field-icon fui-lock" for="login-pass"></label>
        </div>

        <a class="btn btn-primary btn-large btn-block" href="#">注册</a>
        <div class="center">
            <a class="login-link" href=<%= login_welcome_index_path%>>登陆</a>
            |
            <a class="login-link" href="#">忘记密码</a>
        </div>

      </div>
    </div>
  </div>


</div>