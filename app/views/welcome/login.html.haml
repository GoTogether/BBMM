.container
  .login-illustrations
    .login-content
      %div
        %img{src: '/assets/icons/Gift-Box@2x.png'}

  %hr{style: "width: 100%; height: 1px;background-color: #8E44AD;"}

  .login
    .login-screen
      .login-icon
        %img{src: '/assets/login/icon.png'}
        %h4
          = 'Welcome to'
          %small
            = 'Mail App'
      .login-form
        .control-group
          %input#login-name.login-field{type: "text", value: "", placeholder: "用户名"}
          %label.login-field-icon.fui-user{for: "login-name"}
          .control-group
            %input#login-pass.login-field{type: "password", value: "", placeholder: "密码"}
            %label.login-field-icon.fui-lock{for: "login-pass"}
          %a.btn.btn-primary.btn-large.btn-block{href: "#"}
            = "登陆"
          %a.login-link{href: "#"}
            = "忘记密码"
