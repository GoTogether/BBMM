.container
  .row{style: "background: #1abc9c;"}
    .btn-group{style: "padding-left: 0;"}
      %a.btn.btn-primary.active{href: ""}
        = "首页"
      %a.btn.btn-primary{href: ""}
        %i.fui-photo
      %a.btn.btn-primary{href: ""}
        %i.fui-heart
      %a.btn.btn-primary{href: ""}
        %i.fui-eye
