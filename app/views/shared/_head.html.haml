  .login-form.span4.pull-right{style: "display:inline-block;"}
    .control-group
      %input#login-name.login-field{type: "text", value: "", placeholder: "用户名"}
      %label.login-field-icon.fui-user{for: "login-name"}
      .control-group
        %input#login-pass.login-field{type: "password", value: "", placeholder: "密码"}
        %label.login-field-icon.fui-lock{for: "login-pass"}
      %a.btn.btn-primary.btn-large.btn-block{href: "#"}
        = "登陆"
      %a.login-link{href: "#"}
        = "忘记密码"

